<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/createcustomer/db" VERSION="20200213" COMMENT="XMLDB file for itp plugin"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
  <TABLE NAME="customer" COMMENT="each record is one customer">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="shortname" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="None" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="250" NOTNULL="true" DEFAULT="None" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>