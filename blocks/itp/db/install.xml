<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/itp/db" VERSION="20200213" COMMENT="XMLDB file for itp plugin"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
  <TABLE NAME="customer" COMMENT="each record is one customer">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="shortname" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="None" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="250" NOTNULL="true" DEFAULT="None" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="vessel" COMMENT="each record is one vessel or group">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="customer" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="None" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_customer" TYPE="foreign" FIELDS="customer" REFTABLE="customer" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="itp" COMMENT="each record is one itp resource">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="customer" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="vessel" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="None" SEQUENCE="false"/>
        <FIELD NAME="billid" TYPE="char" LENGTH="15" NOTNULL="true" DEFAULT="None" SEQUENCE="false"/>
        <FIELD NAME="email" TYPE="char" LENGTH="250" NOTNULL="true" DEFAULT="None" SEQUENCE="false"/>
        <FIELD NAME="startdate" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="enddate" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
	      <FIELD NAME="course" TYPE="char" LENGTH="15" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT="None" SEQUENCE="false"/>
        <FIELD NAME="duration" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="1" SEQUENCE="false"/>
        <FIELD NAME="location" TYPE="char" LENGTH="150" NOTNULL="false"  SEQUENCE="false"/>
        <FIELD NAME="classroom" TYPE="char" LENGTH="100" NOTNULL="false"  SEQUENCE="false"/>
        <FIELD NAME="schedule" TYPE="char" LENGTH="100" NOTNULL="false"  SEQUENCE="false"/>
        <FIELD NAME="lastupdate" TYPE="int" LENGTH="10" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_customer" TYPE="foreign" FIELDS="customer" REFTABLE="customer" REFFIELDS="id"/>
      </KEYS>
      
    </TABLE>
    <TABLE NAME="teacher_schedule" COMMENT="each record is one teacher scheadule resource">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="customer" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="vessel" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="wbs" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="startdate" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="enddate" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="num_trainees" TYPE="char" LENGTH="15" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="trainees" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="location" TYPE="char" LENGTH="60" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="provider" TYPE="char" LENGTH="60" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="lastupdate" TYPE="int" LENGTH="10" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_customer" TYPE="foreign" FIELDS="customer" REFTABLE="customer" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>